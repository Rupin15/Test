<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/itemview_stock3"
    android:id="@+id/CV_stockItem"
    android:alpha="0.9"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="10dp">

    <ImageView

        android:id="@+id/IV_crypto"
        android:layout_width="38dp"
        android:layout_height="46dp"
        android:layout_margin="5dp"
        android:padding="3dp"
        android:src="@drawable/facebook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/TV_stockName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="120dp"
        android:fontFamily="@font/questrial"
        android:text="Stock Name"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/IV_crypto"
        app:layout_constraintEnd_toStartOf="@+id/TV_stock_worth_number"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/IV_crypto"
        app:layout_constraintTop_toTopOf="@+id/IV_crypto"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/TV_stock_worth_number"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/questrial"
        android:text="1000.0"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/TV_stockName"
        app:layout_constraintEnd_toStartOf="@+id/TV_stock_number"
        app:layout_constraintTop_toTopOf="@+id/TV_stockName"
        app:layout_constraintVertical_bias="0.571" />

    <TextView
        android:id="@+id/TV_stock_number"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/questrial"
        android:text="100"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/TV_stock_worth_number"
        app:layout_constraintEnd_toStartOf="@+id/TV_net_Stock_worth"
        app:layout_constraintTop_toTopOf="@+id/TV_stock_worth_number"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/TV_net_Stock_worth"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/questrial"
        android:text="100000.0"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/TV_stock_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TV_stock_number"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>